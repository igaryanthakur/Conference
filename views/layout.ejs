<!-- ========================================
     LAYOUT TEMPLATE
     Base layout template for EJS views
     Note: This appears to be an alternative layout
     that uses <%- body %> instead of including sections
     ======================================== -->
<!DOCTYPE html>
<html lang="en">
  <!-- Head Section: Meta tags, stylesheets -->
  <%- include('partials/head') %>

  <body>
    <!-- Skip Link: Accessibility feature for keyboard navigation -->
    <a class="skip-link" href="#main-content">Skip to main content</a>

    <!-- Header: Navigation and logo -->
    <%- include('partials/header') %>

    <!-- Main Content Area -->
    <!-- Dynamic content is injected here via <%- body %> -->
    <main id="main-content"><%- body %></main>

    <!-- Footer: Site footer with links and contact info -->
    <%- include('partials/footer') %>
    
    <!-- Scroll to Top Button: Enhanced UX for long pages -->
    <button id="scrollToTop" class="scroll-to-top" aria-label="Scroll to top">
      â†‘
    </button>

    <!-- Scripts: JavaScript files -->
    <%- include('partials/scripts') %>
  </body>
</html>
