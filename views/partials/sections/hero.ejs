<section id="home" class="hero-section">
  <div class="hero-container">
    <!-- Left Column: Conference Information -->
    <div class="hero-left">
      <!-- Main Conference Title -->
      <h1 class="hero-main-title">
        International Research Conference on Nation-Building through Innovation,
        Technology and Sustainability
      </h1>

      <!-- Conference Code/Abbreviation -->
      <h2 class="hero-code">ICâ€‘NBITS 2026</h2>

      <!-- Conference Dates -->
      <p class="hero-dates">
        <strong>13th-14th March, 2026</strong>
      </p>

      <!-- Conference Mode (Hybrid/Online/In-person) -->
      <p class="hero-hybrid-mode">Hybrid Mode</p>

      <!-- Publication Opportunities Information -->
      <p class="hero-theme">
        <strong
          >Publication Opportunities in SCOPUS / ABDC / Peer-Reviewed Listed
          Journals / Conference Proceeding with ISBN number</strong
        >
      </p>

      <!-- Call-to-Action Buttons -->
      <div class="hero-buttons">
        <!-- Download Brochure Button -->
        <a
          href="/IC-NBITS Brochure 05.02.2026 F.pdf"
          class="btn-hero btn-know-more"
          download="IC-NBITS Brochure 05.02.2026 F.pdf"
        >
          <i class="bi bi-download me-2"></i>Brochure
        </a>
        <!-- Know More Button - Scrolls to highlights section -->
        <a href="#highlights" class="btn-hero btn-know-more"> Know More </a>
      </div>
    </div>

    <!-- Right Column: Image Gallery -->
    <div class="hero-right">
      <div class="hero-gallery-wrapper">
        <!-- Gallery Slides Container -->
        <div class="hero-gallery-track">
          <!-- Slide 0: Conference Image 1 -->
          <div class="hero-gallery-slide active">
            <img
              src="/images/Earth.png"
              alt="IC-NBITS 2026 Conference - Image 1"
              class="hero-gallery-img"
              loading="eager"
              fetchpriority="high"
            />
          </div>
          <!-- Slide 1: Conference Image 2 -->
          <div class="hero-gallery-slide">
            <img
              src="/images/Con20251.jpeg"
              alt="IC-NBITS 2026 Conference - Image 2"
              class="hero-gallery-img"
              loading="lazy"
            />
          </div>

          <!-- Slide 2: Conference Image 3 -->
          <div class="hero-gallery-slide">
            <img
              src="/images/Con20252.jpeg"
              alt="IC-NBITS 2026 Conference - Image 3"
              class="hero-gallery-img"
              loading="lazy"
            />
          </div>

          <!-- Slide 3: Conference Image 4 -->
          <div class="hero-gallery-slide">
            <img
              src="/images/Con20253.jpeg"
              alt="IC-NBITS 2026 Conference - Image 4"
              class="hero-gallery-img"
              loading="lazy"
            />
          </div>

          <!-- Slide 4: Conference Image 5 -->
          <div class="hero-gallery-slide">
            <img
              src="/images/Con20254.png"
              alt="IC-NBITS 2026 Conference - Image 5"
              class="hero-gallery-img"
              loading="lazy"
            />
          </div>
        </div>

        <!-- Gradient Overlay for Visual Depth -->
        <div class="hero-gallery-gradient"></div>

        <!-- Gallery Navigation Controls -->
        <div class="hero-gallery-controls">
          <!-- Previous Slide Button -->
          <button
            class="hero-gallery-arrow hero-gallery-prev"
            aria-label="Previous image"
            type="button"
          >
            <i class="bi bi-chevron-left"></i>
          </button>

          <!-- Next Slide Button -->
          <button
            class="hero-gallery-arrow hero-gallery-next"
            aria-label="Next image"
            type="button"
          >
            <i class="bi bi-chevron-right"></i>
          </button>

          <!-- Progress Indicators (Dot Navigation) -->
          <div class="hero-gallery-dots">
            <!-- Dot 0: Slide 0 (Earth.png) -->
            <button
              class="hero-gallery-dot active"
              data-slide="0"
              aria-label="View image 1"
              type="button"
            ></button>
            <!-- Dot 1: Slide 1 (Con20251.jpeg) -->
            <button
              class="hero-gallery-dot"
              data-slide="1"
              aria-label="View image 2"
              type="button"
            ></button>
            <!-- Dot 2: Slide 2 (Con20252.jpeg) -->
            <button
              class="hero-gallery-dot"
              data-slide="2"
              aria-label="View image 3"
              type="button"
            ></button>
            <!-- Dot 3: Slide 3 (Con20253.jpeg) -->
            <button
              class="hero-gallery-dot"
              data-slide="3"
              aria-label="View image 4"
              type="button"
            ></button>
            <!-- Dot 4: Slide 4 (Con20254.png) -->
            <button
              class="hero-gallery-dot"
              data-slide="4"
              aria-label="View image 5"
              type="button"
            ></button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
